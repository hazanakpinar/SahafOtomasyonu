@model Kullanici

@{
    ViewData["Title"] = "CalisanSil";
}

<h1>Çalışan Sil</h1>

<h3>Çalışanı silmek istediğinize emin misiniz?</h3>
<div>
    <hr />
    <form asp-action="CalisanSil">
        <dl class="row">
            <input asp-for="Id" class="form-control" type="hidden" />
            <dt class="col-sm-2">
               İsim
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Isim)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Soyisim)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Soyisim)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Adres)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Adres)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Cinsiyet)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Cinsiyet)
            </dd>
            <dt class="col-sm-2">
                Telefon Numarası
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PhoneNumber)
            </dd>
            <dt class="col-sm-2">
                İşe Giriş Tarihi
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IseGirisTarihi)
            </dd>
            <dt class="col-sm-2">
                E-Posta
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AktifMi)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AktifMi)
            </dd>
        </dl>

        <input type="submit" value="Sil" class="btn btn-danger" />
        <a asp-action="CalisanListele" class="btn btn-secondary">Listeye Geri Dön</a>
    </form>
</div>
