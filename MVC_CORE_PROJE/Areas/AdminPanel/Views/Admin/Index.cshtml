@model Kitap

<div class="container mt-6">
    <div class="row">
        <div class="col-sm-6 d-flex justify-content-center">
            <div class="card text-center bg-primary text-white mb-4" style="width: 100%; height: 300px;">
                <div class="card-body d-flex flex-column align-items-center justify-content-center" style="height: 100%;">
                    <h3 class="card-title">ÇALIŞAN RAPOR</h3>
                    <a asp-area="AdminPanel" asp-controller="Admin" asp-action="CalisanListele" class="btn btn-light text-primary mt-3">Çalışanların Listesi ve Çalışan İşlemleri</a>
                </div>
            </div>
        </div>

        <div class="col-sm-6 d-flex justify-content-center">
            <div class="card text-center bg-success text-white mb-4" style="width: 100%; height: 300px;">
                <div class="card-body d-flex flex-column align-items-center justify-content-center" style="height: 100%;">
                    <h3 class="card-title">KİTAP LİSTESİ</h3>
                    <a asp-area="CalisanPanel" asp-controller="Calisan" asp-action="KitapListele" class="btn btn-light text-success mt-3">Kitapların Listesi ve Kitap İşlemleri</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-sm-6 d-flex justify-content-center">
            <div class="card text-center bg-dark text-white mb-4" style="width: 100%; height: 300px;">
                <div class="card-body d-flex flex-column align-items-center justify-content-center" style="height: 100%;">
                    <h3 class="card-title">YAYINEVİNE GÖRE LİSTELE</h3>
                    <form asp-area="AdminPanel" asp-controller="Admin" asp-action="YayinEvineGoreKitaplariListele" method="post">
                        <div class="form-group">
                            <label asp-for="YayinEviID" class="control-label">YayınEvi Adı</label>
                            <select name="yayinEviID" asp-for="YayinEviID" asp-items="@ViewBag.YayinEvleri" class="form-control"></select>
                            <span asp-validation-for="YayinEviID" class="text-danger"></span>
                        </div>
                        <input type="submit" value="RAPORU GÖRÜNTÜLE" class="btn btn-light text-dark mt-3" />
                    </form>
                </div>
            </div>
        </div>

        <div class="col-sm-6 d-flex justify-content-center">
            <div class="card text-center bg-warning text-white mb-4" style="width: 100%; height: 300px;">
                <div class="card-body d-flex flex-column align-items-center justify-content-center" style="height: 100%;">
                    <h3 class="card-title">KATEGORİYE GÖRE LİSTELE</h3>
                    <form asp-area="AdminPanel" asp-controller="Admin" asp-action="KategoriyeGoreKitaplariListele" method="post">
                        <div class="form-group">
                            <label asp-for="KategoriID" class="control-label">Kategori Adı</label>
                            <select name="kategoriID" asp-for="KategoriID" asp-items="@ViewBag.Kategoriler" class="form-control"></select>
                            <span asp-validation-for="KategoriID" class="text-danger"></span>
                        </div>
                        <input type="submit" value="RAPORU GÖRÜNTÜLE" class="btn btn-light text-dark mt-3" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
