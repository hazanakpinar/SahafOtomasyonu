@model MVC_CORE_PROJE.Models.Kitap

@{
    ViewData["Title"] = "KitapGuncelle";
}

<h1 class="text-center my-4">Kitap Güncelleme</h1>
<hr />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="KitapGuncelle" method="post" enctype="multipart/form-data" class="bg-light p-4 rounded shadow">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group">
                    <input asp-for="KitapID" hidden class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="KitapAdi" class="control-label">Kitap Adı</label>
                    <input asp-for="KitapAdi" value="@Model.KitapAdi" class="form-control" placeholder="Kitap Adını Girin" />
                    <span asp-validation-for="KitapAdi" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Fiyat" class="control-label">Fiyat</label>
                    <input type="number" asp-for="Fiyat" class="form-control" placeholder="Fiyatı Girin" />
                    <span asp-validation-for="Fiyat" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Stok" class="control-label">Stok</label>
                    <input type="number" asp-for="Stok" class="form-control" placeholder="Stok Miktarını Girin" />
                    <span asp-validation-for="Stok" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="KapakResmi" class="control-label">Kapak Resmi</label>
                    <input type="file" name="ResimDosyasi" class="form-control" />
                    <span asp-validation-for="KapakResmi" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="control-label">Yazar Adı</label>
                    <div class="form-check">
                        @foreach (var item in ViewBag.Yazarlar)
                        {
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" name="yazarIDleri" value="@item.Value" @(ViewBag.SelectedAuthorIds.Contains(int.Parse(item.Value)) ? "checked" : "") />
                                <label class="form-check-label">@item.Text</label>
                            </div>
                        }
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="YayinEviID" class="control-label">Yayın Evi Adı</label>
                    <select asp-for="YayinEviID" asp-items="@ViewBag.YayinEvleri" class="form-control"></select>
                    <span asp-validation-for="YayinEviID" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="KategoriID" class="control-label">Kategori Adı</label>
                    <select asp-for="KategoriID" asp-items="@ViewBag.Kategoriler" class="form-control"></select>
                    <span asp-validation-for="KategoriID" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Kaydet" class="btn btn-primary btn-block" />
                    <a asp-action="KitapListele" class="btn btn-secondary">Listeye Geri Dön</a>
                </div>
            </form>
        </div>
    </div>
</div>
